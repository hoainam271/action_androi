<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:strokeColor="#DDDDDD"
    app:strokeWidth="1dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Ảnh bài viết -->
        <ImageView
            android:id="@+id/imgThumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="Ảnh bài viết"
            android:background="@drawable/bg_image_placeholder" />

        <!-- Nội dung văn bản -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiêu đề bài viết"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái: Published"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <!-- Hàng nút Sửa / Xóa -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_gravity="bottom">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sửa"
                    android:textAllCaps="false"
                    android:textColor="#1E88E5"
                    app:backgroundTint="#E3F2FD"
                    app:strokeColor="#90CAF9"
                    app:strokeWidth="1dp"
                    app:cornerRadius="24dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xóa"
                    android:textAllCaps="false"
                    android:textColor="#E53935"
                    app:backgroundTint="#FFEBEE"
                    app:strokeColor="#EF9A9A"
                    app:strokeWidth="1dp"
                    app:cornerRadius="24dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
